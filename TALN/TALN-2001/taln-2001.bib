@inproceedings{benhazez-descles-minel:2001:TALN,
  author    = {Ben Hazez, Slim and Desclés, Jean-Pierre and Minel, Jean-Luc},
  title     = {Modèle d’exploration contextuelle pour l’analyse sémantique de textes},
