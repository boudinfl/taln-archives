}

@inproceedings{rozenknop-silaghi:2001:TALN,
  author    = {Rozenknop, Antoine and Silaghi, Marius},
  title     = {Algorithme de décodage de treillis selon le critère du coût moyen pour la reconnaissance de la parole},
