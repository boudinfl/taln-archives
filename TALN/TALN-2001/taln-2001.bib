@inproceedings{rosset-lamel:2001:TALN,
  author    = {Rosset, Sophie and Lamel, Lori},
  title     = {Gestionnaire de dialogue pour un système d’informations à reconnaissance vocale},
  booktitle = {Actes de la 8ème conférence sur le Traitement Automatique des Langues Naturelles},
  month     = {July},
  year      = {2001},
  address   = {Tours, France},
