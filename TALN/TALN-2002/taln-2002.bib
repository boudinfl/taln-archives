@inproceedings{balvet-grisvard-bisson:2002:TALN,
  author    = {Balvet, Antonio and Grisvard, Olivier and Bisson, Pascal},
  title     = {Tutoriel : Open Agent Architecture Développement d’applications de TALN distribuées, multiagents et multiplates-formes},
  booktitle = {Actes de la 9ème conférence sur le Traitement Automatique des Langues Naturelles},
  month     = {June},
