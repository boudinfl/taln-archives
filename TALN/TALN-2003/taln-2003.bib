@inproceedings{vaillant:2003:TALN,
  author    = {Vaillant, Pascal},
  title     = {Une grammaire formelle du créole martiniquais pour la génération automatique},
  booktitle = {Actes de la 10ème conférence sur le Traitement Automatique des Langues Naturelles},
  month     = {June},
  year      = {2003},
  address   = {Batz-sur-Mer, France},
