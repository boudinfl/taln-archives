@inproceedings{dechalendar-EtAl:2003:TALN,
  author    = {de Chalendar, Gaël and El Kateb, Faïza and Ferret, Olivier and Grau, Brigitte and Hurault-Plantet, Martine and Monceaux, Laura and Robba, Isabelle and Vilnat, Anne},
  title     = {Confronter des sources de connaissances différentes pour obtenir une réponse plus fiable},
  booktitle = {Actes de la 10ème conférence sur le Traitement Automatique des Langues Naturelles},
  month     = {June},
  year      = {2003},
  address   = {Batz-sur-Mer, France},
  publisher = {Association pour le Traitement Automatique des Langues},
  pages     = {105--114},
  url       = {http://www.atala.org/taln_archives/TALN/TALN-2003/taln-2003-long-009},
  language  = {french},
  resume    = {La fiabilité des réponses qu’il propose, ou un moyen de l’estimer, est le meilleur atout d’un système de question-réponse. A cette fin, nous avons choisi d’effectuer des recherches dans des ensembles de documents différents et de privilégier des résultats qui sont trouvés dans ces différentes sources. Ainsi, le système QALC travaille à la fois sur une collection finie d’articles de journaux et sur le Web.},
  abstract  = {A question answering system will be more convincing if it can give a user elements concerning the reliability of it propositions. In order to address this problem, we choose to take the advice of several searches. First we search for answers in a reliable document collection, and second on the Web. When the two sources of knowledge give the system QALC common answers, we are confident with them and boost them at the first places.},
