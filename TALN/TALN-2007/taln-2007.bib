@inproceedings{danlos-sagot:2007:TALN,
  author    = {Danlos, Laurence and Sagot, Benoît},
  title     = {Comparaison du Lexique-Grammaire des verbes pleins et de DICOVALENCE : vers une intégration dans le Lefff},
  booktitle = {Actes de la 14ème conférence sur le Traitement Automatique des Langues Naturelles},
