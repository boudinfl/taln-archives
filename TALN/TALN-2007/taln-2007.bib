@inproceedings{benothmanezribi-mejri-benahmed:2007:TALN,
  author    = {Ben Othmane Zribi, Chiraz and Mejri, Hanène and Ben Ahmed, Mohamed},
  title     = {Un analyseur hybride pour la détection et la correction des erreurs cachées sémantiques en langue arabe},
