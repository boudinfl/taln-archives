@inproceedings{gardent-parmentier:2007:TALN,
  author    = {Gardent, Claire and Parmentier, Yannick},
  title     = {SemTAG, une architecture pour le développement et l’utilisation de grammaires d’arbres adjoints à portée sémantique},
