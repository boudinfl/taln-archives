@inproceedings{macklovitch-lapalme:2007:TALN,
  author    = {Macklovitch, Elliott and Lapalme, Guy},
  title     = {TransCheck : un vérificateur automatique de traductions},
  booktitle = {Actes de la 14ème conférence sur le Traitement Automatique des Langues Naturelles},
