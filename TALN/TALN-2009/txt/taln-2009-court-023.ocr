<units>
<type name="Inl:r0duction">
< featureset >
<feature name="scope"><value type="free" default=" section" /></ feature>
<feature name="document—boundaIy"><Value type="boolean" default="false" /></ feature>
<feature name="majn—topic"><value type="free" default='”' /></ feature >
