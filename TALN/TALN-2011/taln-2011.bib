@inproceedings{benfraj:2011:TALN,
  author    = {Ben Fraj, Fériel},
  title     = {Construction d'une grammaire d'arbres adjoints pour la langue arabe},
  booktitle = {Actes de la 18e conférence sur le Traitement Automatique des Langues Naturelles},
  month     = {June},
