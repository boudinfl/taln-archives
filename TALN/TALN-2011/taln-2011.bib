@inproceedings{cartoni-deleger:2011:TALN,
  author    = {Cartoni, Bruno and Deléger, Louise},
  title     = {Découverte de patrons paraphrastiques en corpus comparable: une approche basée sur les n-grammes},
  booktitle = {Actes de la 18e conférence sur le Traitement Automatique des Langues Naturelles},
  month     = {June},
  year      = {2011},
