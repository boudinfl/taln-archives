@inproceedings{falaise-tutin-kraif:2011:TALN,
  author    = {Falaise, Achille and Tutin, Agnès and Kraif, Olivier},
  title     = {Exploitation d'un corpus arboré pour non spécialistes par des requêtes guidées et des requêtes sémantiques},
  booktitle = {Actes de la 18e conférence sur le Traitement Automatique des Langues Naturelles},
  month     = {June},
  year      = {2011},
  address   = {Montpellier, France},
