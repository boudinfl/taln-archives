@inproceedings{russo-EtAl:2011:TALN,
  author    = {Russo, Lorenza and Scherrer, Yves and Goldman, Jean-Philippe and Loáiciga, Sharid and Nerima, Luka and Wehrli, Éric},
  title     = {Étude inter-langues de la distribution et des ambiguïtés syntaxiques des pronoms},
