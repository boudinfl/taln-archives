@inproceedings{gohring-volk:2011:TALN,
  author    = {Göhring, Anne and Volk, Martin},
  title     = {Le corpus Text+Berg Une ressource parallèle alpin français-allemand},
  booktitle = {Actes de la 18e conférence sur le Traitement Automatique des Langues Naturelles},
  month     = {June},
  year      = {2011},
  address   = {Montpellier, France},
