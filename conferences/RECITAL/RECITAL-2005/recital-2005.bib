@inproceedings{bertels:2005:RECITAL,
  author    = {Bertels, Ann},
  title     = {A la découverte de la polysémie des spécificités du français technique},
  booktitle = {Actes des 7e Rencontres des Étudiants Chercheurs en Informatique pour le Traitement Automatique des Langues},
  month     = {June},
