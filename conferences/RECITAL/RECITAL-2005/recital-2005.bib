@inproceedings{bove:2005:RECITAL,
  author    = {Bove, Rémi},
  title     = {Étude de quelques problèmes de phonétisation dans un système de synthèse de la parole à partir de SMS},
  booktitle = {Actes des 7e Rencontres des Étudiants Chercheurs en Informatique pour le Traitement Automatique des Langues},
  month     = {June},
  year      = {2005},
  address   = {Dourdan, France},
