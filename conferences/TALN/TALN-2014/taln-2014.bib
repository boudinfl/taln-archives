@inproceedings{deleger-neveol:2014:TALN,
  author    = {Deléger, Louise and Névéol, Aurélie},
  title     = {Identification automatique de zones dans des documents pour la constitution d’un corpus médical en français},
  booktitle = {Actes de la 21e conférence sur le Traitement Automatique des Langues Naturelles},
  month     = {July},
  year      = {2014},
